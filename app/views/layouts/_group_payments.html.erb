<div class="flex justify-evenly items-center mt-5 bg-white mx-4">
 <% list_payments(@group).each do |item| %>
  <%= link_to image_tag('money.png'), group_payments_url(@group)%>
   <h5 class="font-medium mb-1"><%= item.name %></h5>
   <h5 class="mb-1"><%= item.amount %></h5>
 <% end %>
</div>

<div class="w-full bg-lime-400 p-5 mt-5 absolute bottom-0">
<div class="border border-solid border-7 border-white w-50 rounded-lg">
    <%= link_to 'Add Payment', new_group_payment_path(@group), class: "py-5 text-white text-center block font-medium mt-5 mb-3 w-70" %>
</div>
</div>