<%= render 'layouts/navbar'%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'content') do |f| %>
  <div class="field text-center flex flex-col justify-center mt-5 mb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "block shadow rounded-md border border-gray-500 outline-none px-3 py-2 mx-auto" %>
  </div>

  <div class="field text-center flex flex-col justify-center">
    <%= f.label :password,class:"mt-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password",  class: "block shadow rounded-md border border-gray-500 outline-none px-3 py-2 mx-auto"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field px-3 py-2 mt-2 text-center">
      <%= f.check_box :remember_me  %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

<div class="flex flex-col justify-center">
  <div class="actions text-center">
    <%= f.submit "Log in", data: {turbo: false}, class: "rounded-lg py-3 px-5 bg-lime-400 text-white font-medium cursor-pointer" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "rounded-lg py-3 px-5 bg-sky-600 text-white inline-block font-medium cursor-pointer"  %><br />
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sky-600" %><br />
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-500" %><br />
  </div>
</div>
<% end %>
