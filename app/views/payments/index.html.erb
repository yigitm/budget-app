<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="payments" class="min-w-full">
    <%= render @payments %>
  </div>
</div>

<div class="w-full bg-lime-400 p-5 mt-5 absolute bottom-0">
  <div class="border border-solid border-7 border-white w-50 rounded-lg">
    <%= link_to 'New payment', new_group_payment_path, class: "py-5 text-white text-center block font-medium mt-5 mb-3 w-70" %>
  </div>
</div>
