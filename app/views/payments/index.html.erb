      <%= render @payments %>
    </div>
  <% else%>
    <div id="payments" class="min-w-ful">
      <h1 class="text-7xl text-center my-20">No payments yet</h1>
    </div>
  <% end %>
</div>

<div class="w-full bg-lime-400 p-5 mt-5 absolute bottom-0">
  <div class="border border-solid border-7 border-white w-50 rounded-lg">
