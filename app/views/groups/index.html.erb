<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="groups" class="min-w-full">
    <%= render @groups %>
  </div>

  <div class="flex justify-between items-center">
    <%= link_to 'Add New Category', new_group_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium mx-auto mt-5" %>
  </div>
</div>
